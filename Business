    <script src="script.js">document.addEventListener('DOMContentLoaded', () => {
    const changeImageBtn = document.getElementById('change-image');
    const deleteImageBtn = document.getElementById('delete-image');
    const imageUpload = document.getElementById('image-upload');
    const businessLogo = document.getElementById('business-logo');
    const form = document.getElementById('settings-form');

    // Handle Change Image
    changeImageBtn.addEventListener('click', () => {
        imageUpload.click();
    });

    imageUpload.addEventListener('change', (event) => {
        const file = event.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = (e) => {
                businessLogo.src = e.target.result;
            };
            reader.readAsDataURL(file);
        }
    });

    // Handle Delete Image
    deleteImageBtn.addEventListener('click', () => {
        businessLogo.src = 'https://via.placeholder.com/100'; // Reset to default placeholder
        imageUpload.value = ''; // Clear the file input
    });

    // Handle Form Submission
    form.addEventListener('submit', (event) => {
        event.preventDefault();
        alert('Changes saved successfully!');
    });
});</script>
